{
  "openapi": "3.0.0",
  "info": {
    "title": "Common User App",
    "description": "This is a sample server for a pet store.",
    "contact": {
      "name": "API Support",
      "url": "http://www.example.com/support",
      "email": "support@example.com"
    },
    "version": "1.0.1"
  },

  "servers": [
    {
      "url": "http://localhost:3000/api-documentation",
      "description": "test"
    }
  ],
  "paths": {
    "/users": {
      "post": {
        "description": "Essa rota é responsavel por cadastrar um usuário",
        "tags": ["Users"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/User" }
            },
            "examples": {
              "user": {
                "value": {
                  "name": "Patrick Nekel",
                  "email": "nekeldev@gmail.com",
                  "id": "id"
                }
              }
            }
          }
        },
        "responses": {
          "401": {
            "description": "Unauthorized"
          },
          "400": {
            "description": "User already exists!"
          },
          "200": {
            "description": "OK",
            "content": {
              "schema": {
                "type": "object",
                "$ref": "#/components/schemas/User"
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "id": {
            "type": "string"
          }
        }
      }
    }
  }
}
